<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grouped_contacts_person_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grouped_contacts_person_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grouped_contacts_person_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/grouped_contacts_person_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/grouped_contacts_person_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp" />
</LinearLayout>