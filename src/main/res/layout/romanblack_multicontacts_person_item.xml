<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/romanblack_multicontacts_background"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:id="@+id/romanblack_multicontacts_person_item"
            android:textSize="16dp"
            android:textColor="#000"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"/>

        <LinearLayout android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="right" android:layout_weight="2">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gc_persons_count"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#FFF"
                android:singleLine="true"
                android:lines="1"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/romanblack_multicontacts_details_arrow"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/gc_item_separator"
        android:layout_marginLeft="20dp"/>
</LinearLayout>