<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/romanblack_multicontacts_rowfirst_dark"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/romanblack_multicontacts_background"
        android:gravity="center_vertical">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:id="@+id/romanblack_multicontacts_person_item"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end" android:layout_marginLeft="5dp"/>

        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="right" android:layout_weight="1">

            <ImageView android:src="@drawable/romanblack_multicontacts_arrow"
                android:id="@+id/romanblack_multicontacts_details_arrow"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:paddingRight="10dip"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>